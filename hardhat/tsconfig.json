{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": [
      "./scripts"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./scripts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}